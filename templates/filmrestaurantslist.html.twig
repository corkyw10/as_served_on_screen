{% extends 'jumbo.html.twig' %}

{% block content %}

        <div class="album py-5 bg-light">
            <div class="container">
    
              <div class="row">

                {% if restaurants %}
                    {% for restaurant in restaurants %}

                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                        <img class="card-img-top" src="{{ asset('assets/images/'~restaurant.imageUrl) }}" alt="{{ restaurant.name }} image">
                        <div class="card-body">
                                <h2 class="card-text">{{ restaurant.name }}</h2>
                            <div class="d-flex justify-content-between align-items-center">
                                <button type="button" class="btn btn-outline-dark .btn-lg">Eat!</button>
                            </div>
                        </div>
                        </div>
                    </div>

                {% endfor %}
            {% endif %}

                </div>
            </div>

        </div>

{% endblock %}