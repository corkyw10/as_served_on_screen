{% extends 'jumbo.html.twig' %}

{% block display %}
  <h1 class="display-3">{{ restaurant.name }}</h1>
{% endblock %}

{% block content %}
  {% if restaurant %}
        
      <div class="container">
        <div class="row">
          <div class="col-md-4">
            <img src="{{ asset('assets/images/'~restaurant.imageUrl) }}" class="img-fluid shadow" alt="Responsive image">
					</div>
	
					<div class="col-md-6">
						<h2 class="restaurant-title">{{ restaurant.name }}</h2>
						<p>{{ restaurant.description }}</p>
					</div>        
        </div>    
      </div>

			<div class="container">
					<div class="row">
						<div class="col-md-4">
							<address>
								{{ restaurant.name }}<br>
								{{ restaurant.streetAddress }}<br>
								{{ restaurant.city }}<br>
								{{ restaurant.postCode }}<br><br>
								<a class="btn btn-outline-dark" href="{{ restaurant.url }}" role="button" target="_blank">Visit their website</a>
							</address>
						</div>
					</div>
			</div>

{% else %}

    <h2>There hasn't been any information added for this restaurant yet, we're working on it though, check again soon!</h2>

{% endif %}
{% endblock %}









