{% extends 'jumbo.html.twig' %}

{% block display %}
    {% for place in restaurant %}
        <h1 class="display-3">{{ place.name }}</h1>
    {% endfor %}
{% endblock %}

{% block content %}
{% if restaurant %}
{% for place in restaurant %}
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <img src="{{ asset('assets/images/'~place.imageUrl) }}" class="img-fluid" alt="Responsive image">
            </div>
        
            <div class="col-md-6">
                    <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                            <h2 class="card-text">{{ place.name }}</h2>
                            <address>
                                {{ place.streetAddress }}<br>
                                {{ place.city }}<br>
                                {{ place.postCode }}<br>
                                {{ place.url }}<br>
                            </address>  
                    </div>
                    </div>
            </div>        
        </div>    
    </div>      
{% endfor %}

{% endif %}





{% endblock %}









