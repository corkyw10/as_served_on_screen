{% extends 'jumbo.html.twig' %}

{% block display %}<h1 class="display-3">Seasons</h1>{% endblock %}

{% block content %}

        <div class="album py-5 bg-light">
            <div class="container">    
                <div class="row">

                    {% if seasons %}
                        {% for season in seasons %}

                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm">
                            <img class="card-img-top" src="{{ asset('assets/images/'~season.tvShow.imageUrl) }}" alt="{{ season.seasontitle }} image">
                            <div class="card-body">                          
                                <a class="card-link" href="{{ path('episodes', {'tvShowId': season.tvShow.id, 'seasonId': season.id}) }}">
                                   <h2 class="card-text">{{ season.seasontitle }}</h2>
                                </a>                                
                            </div>
                            </div>
                        </div>

                        {% endfor %}
                    {% else %}

                        <h2>There haven't been any seasons added yet, we're working on it though, check again soon!</h2>

                    {% endif %}

                </div>
            </div>

        </div>

{% endblock %}