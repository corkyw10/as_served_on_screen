{% extends 'jumbo.html.twig' %}

{% block content %}

        <div class="album py-5 bg-light">
            <div class="container">
    
              <div class="row">

                {% if films %}
                    {% for film in films %}

                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                        <img class="card-img-top" src="images/{{ film.imageUrl }}" alt="{{ film.title }} image">
                        <div class="card-body">
                            <h2 class="card-text">{{ film.title }}</h2>
                            <div class="d-flex justify-content-between align-items-center">
                                <button type="button" class="btn btn-outline-dark .btn-lg">Eat!</button>
                            </div>
                        </div>
                        </div>
                    </div>

                {% endfor %}
            {% endif %}

                </div>
            </div>

        </div>

{% endblock %}