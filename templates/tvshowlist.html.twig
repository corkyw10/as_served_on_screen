{% extends 'jumbo.html.twig' %}

{% block display %}<h1 class="display-3">TV Shows</h1>{% endblock %}

{% block content %}

        <div class="album py-5 bg-light">
            <div class="container">    
              <div class="row">

                {% if tvShows %}
                    {% for tvShow in tvShows %}                    

                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <div class="card-img" style="background-image: url('{{ asset("assets/images/"~tvShow.imageUrl) }}');"></div>
                        <div class="card-body">
                            <a class="card-link" href="{{ path('seasons', {'tvShowId': tvShow.id}) }}">
                                <h2 class="card-text">{{ tvShow.title }}</h2>
                            </a>
                            <div class="d-flex justify-content-between align-items-center">
                            </div>
                        </div>
                        </div>
                    </div>

                    {% endfor %}
             {% else %}

                <h2>There haven't been any Tv Shows added yet, we're working on it though, check again soon!</h2>

            {% endif %}

                </div>
            </div>
        </div>

{% endblock %}