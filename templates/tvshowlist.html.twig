{% extends 'jumbo.html.twig' %}

{% block content %}

        <div class="album py-5 bg-light">
            <div class="container">
    
              <div class="row">

                {% if tvShows %}
                    {% for tvShow in tvShows %}

                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                        <img class="card-img-top" src="{{ asset('assets/images/'~tvShow.imageUrl) }}" alt="{{ tvShow.title }} image">
                        <div class="card-body">
                            <a href="{{ path('seasons', {'id': tvShow.id}) }}">
                                <h2 class="card-text">{{ tvShow.title }}</h2>
                            </a>
                            <div class="d-flex justify-content-between align-items-center">
                                <button type="button" class="btn btn-outline-dark .btn-lg">See Seasons</button>
                            </div>
                        </div>
                        </div>
                    </div>

                {% endfor %}
            {% endif %}

                </div>
            </div>

        </div>

{% endblock %}