{% extends 'jumbo.html.twig' %}

{% block display %}<h1 class="display-3">Restaurants</h1>{% endblock %}

{% block content %}

        <div class="album py-5 bg-light">
            <div class="container">    
                <div class="row">

                {% if restaurants %}
                    {% for restaurant in restaurants %}

                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                        <div class="card-img" style="background-image: url('{{ asset("assets/images/"~restaurant.imageUrl) }}');"></div>
                        <div class="card-body">
                            <a class="card-link" href="{{ path('restaurantInfo', {'tvShowId': restaurant.episode.tvShow.id, 'seasonId': restaurant.episode.season.id, 'episodeId': restaurant.episode.id, 'restaurantId': restaurant.id}) }}">
                                <h2 class="card-text">{{ restaurant.name }}</h2>
                            </a>
                        </div>
                        </div>
                    </div>

                    {% endfor %}
                {% else %}

                <h2>There haven't been any restaurants added yet, we're working on it though, check again soon!</h2>

                {% endif %}

                </div>
            </div>
        </div>

{% endblock %}