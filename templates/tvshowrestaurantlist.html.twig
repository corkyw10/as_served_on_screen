{% extends 'jumbo.html.twig' %}

{% block display %}<h1 class="display-3">Restaurants</h1>{% endblock %}

{% block content %}

        <div class="album py-5 bg-light">
            <div class="container">
    
              <div class="row">

                {% if restaurants %}
                    {% for restaurant in restaurants %}

                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                        <img class="card-img-top" src="{{ asset('assets/images/'~restaurant.imageUrl) }}" alt="{{ restaurant.name }} image">
                        <div class="card-body">
                            <a class="card-link" href="{{ path('restaurantInfo', {'tvShowId': restaurant.episode.tvShow.id, 'seasonId': restaurant.episode.season.id, 'episodeId': restaurant.episode.id, 'restaurantId': restaurant.id}) }}">
                                <h2 class="card-text">{{ restaurant.name }}</h2>
                            </a>
                        </div>
                        </div>
                    </div>

                {% endfor %}
            {% endif %}

                </div>
            </div>

        </div>

{% endblock %}